        <div class="row ">
            {{#each products}}
              <div class="col-md-3 p-5" >
                 <div class="card" style="width: 15rem; height:24rem; ">
                    <img src="/product-images/{{this._id}}.jpg"class="card-img-top" alt="/product-images/{{this._id}}.jpg"/ style="height:15rem;">
                         <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                         <p class="card-text">RS.{{this.price}}</p>
                         
 
                         <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}

         
          </div>
      </div>
